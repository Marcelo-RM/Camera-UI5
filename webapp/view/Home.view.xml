<mvc:View
	controllerName="project.camera.controller.Home"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:cam="project.camera.camera"
	xmlns:mvc="sap.ui.core.mvc">
	<Page
		id="page"
		title="OPENUI5 Camera">
		<content>
			<VBox class="sapUiSmallMargin">
				<cam:Camera text="Take a picture" icon="sap-icon://camera" onChange=".selectImage"/>
				<HBox>
					<cam:Camera icon="sap-icon://add-photo" onChange=".selectImage" class="sapUiSmallMarginBegin" type="Accept" />
					<cam:Camera icon="sap-icon://add-photo" onChange=".selectImage" class="sapUiSmallMarginBegin" type="Success" />
					<cam:Camera icon="sap-icon://camera" onChange=".selectImage" class="sapUiSmallMarginBegin" type="Reject" />
					<cam:Camera icon="sap-icon://camera" onChange=".selectImage" class="sapUiSmallMarginBegin" type="Negative"/>
					<cam:Camera icon="sap-icon://add-photo" onChange=".selectImage" class="sapUiSmallMarginBegin" type="Attention" />
					<cam:Camera icon="sap-icon://add-photo" onChange=".selectImage" class="sapUiSmallMarginBegin" type="Critical" />
					<cam:Camera icon="sap-icon://camera" onChange=".selectImage" class="sapUiSmallMarginBegin" type="Ghost" />
					<cam:Camera icon="sap-icon://camera" onChange=".selectImage" class="sapUiSmallMarginBegin" />
					<cam:Camera icon="sap-icon://add-photo" onChange=".selectImage" class="sapUiSmallMarginBegin" type="Emphasized" />
				</HBox>
			</VBox>

			<VBox class="sapUiSmallMargin">
				<Image id="image" width="300px" height="400px"/>
			</VBox>
		</content>
	</Page>
</mvc:View>