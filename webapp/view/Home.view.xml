<mvc:View
	controllerName="project.camera.controller.Home"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:cam="project.camera.camera"
	xmlns:mvc="sap.ui.core.mvc">
	<Page
		id="page"
		title="SAPUI5 Camera">
		<content>
			<VBox class="sapUiSmallMargin">
				<cam:camera text="Take a picture" onChange=".selectImage"/>
				<cam:Camera onChange=".selectImage" />
			</VBox>

			<VBox class="sapUiSmallMargin">
				<Image id="image" width="300px" height="400px"/>
			</VBox>
		</content>
	</Page>
</mvc:View>